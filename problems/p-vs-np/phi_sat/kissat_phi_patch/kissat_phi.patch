+/* φ-Guided Restart Policy - Phase transition model for random 3-SAT */
+#include "phi.h"
+#include <math.h>
+
+phi_config PHI_CONFIG;
+
+static const struct { unsigned n; double alpha_c; } ALPHA_C_TABLE[] = {
+    {20, 2.50}, {50, 3.00}, {100, 3.20}, {200, 3.40}, {500, 3.57},
+    {1000, 3.90}, {2000, 4.10}, {4000, 4.20}, {8000, 4.25}, {0, 4.267}
+};
+
+void phi_init(void) {
+    PHI_CONFIG.enabled = true;
+    PHI_CONFIG.early_sat_threshold = -0.5;
+    PHI_CONFIG.danger_zone = 0.15;
+    PHI_CONFIG.restart_multiplier = 0.5;
+    PHI_CONFIG.min_progress = 0.3;
+}
+
+double phi_predict_alpha_c(unsigned n) {
+    if (n == 0) return 4.267;
+    unsigned i = 0;
+    while (ALPHA_C_TABLE[i+1].n != 0 && ALPHA_C_TABLE[i+1].n < n) i++;
+    if (n <= ALPHA_C_TABLE[0].n) return ALPHA_C_TABLE[0].alpha_c;
+    if (ALPHA_C_TABLE[i+1].n == 0) return ALPHA_C_TABLE[i].alpha_c;
+    unsigned n1 = ALPHA_C_TABLE[i].n, n2 = ALPHA_C_TABLE[i+1].n;
+    double a1 = ALPHA_C_TABLE[i].alpha_c, a2 = ALPHA_C_TABLE[i+1].alpha_c;
+    double t = (log((double)n) - log((double)n1)) / (log((double)n2) - log((double)n1));
+    return a1 + t * (a2 - a1);
+}
+
+double phi_distance(unsigned remaining_vars, unsigned remaining_clauses) {
+    if (remaining_vars == 0) return (remaining_clauses > 0) ? 1000.0 : -1000.0;
+    double alpha = (double)remaining_clauses / (double)remaining_vars;
+    double alpha_c = phi_predict_alpha_c(remaining_vars);
+    return (alpha - alpha_c) / alpha_c;
+}
+
+bool phi_should_restart(unsigned rv, unsigned rc, uint64_t conflicts, uint64_t base) {
+    if (!PHI_CONFIG.enabled) return conflicts >= base;
+    double distance = phi_distance(rv, rc);
+    if (fabs(distance) < PHI_CONFIG.danger_zone) {
+        return conflicts >= (uint64_t)(base * PHI_CONFIG.restart_multiplier);
+    }
+    return conflicts >= base;
+}
+
+bool phi_early_sat_possible(unsigned rv, unsigned rc, unsigned orig, double prog) {
+    if (!PHI_CONFIG.enabled || prog < PHI_CONFIG.min_progress) return false;
+    return phi_distance(rv, rc) < PHI_CONFIG.early_sat_threshold;
+}

